@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h1 class="titlecss">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <section>
            <img src="~/images/Anezile_welcome.jpg" class="img-responsive" style="padding: 20px 0px;" />
        </section>
    </div>
    <div class="col-md-6">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4 style="text-align:center">Create a new account.</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control coloring" placeholder ="Enter your First Name"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control coloring" placeholder ="Enter your last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control coloring" placeholder ="Enter your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control coloring" placeholder ="Enter your Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control coloring" placeholder ="Enter your Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default coloring">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
